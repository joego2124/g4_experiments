{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Configure CMake Project",
			"type": "shell",
			"command": "cmake",
            "args": [
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_C_COMPILER=arm-none-eabi-gcc",
                "-DCMAKE_CXX_COMPILER=arm-none-eabi-g++",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}\\build"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                    "args": ["-NoProfile", "-Command"]
                }
            },
            "group": "build",
			"presentation": {
				"reveal": "always",
				"clear": true
			},
			"problemMatcher": []
		},
		{
            "label": "Build Project",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}\\build"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                    "args": ["-NoProfile", "-Command"]
                }
            },
            "dependsOn": "CMake Configure",
            "group": "build",
            "presentation": {
				"reveal": "always",
				"clear": true
			},
            "problemMatcher": []
        }
    ]
}